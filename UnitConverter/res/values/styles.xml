<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
    </style>

    <!-- Application theme.
         Special features for the Unit Converter -->
    <style name="UnitConverterTheme" parent="android:Theme.Holo.Light">
		<item name="android:actionBarSize">150dp</item>
		<item name="android:actionBarStyle">@style/actionBar</item>
    </style>
    
    <style name="actionBar">
        <item name="android:background">@color/the_best_blue</item>
         <item name="android:titleTextStyle">@style/actionBarTitleText</item>
    </style>
    
    <style name="actionBarTitleText">
		<item name="android:textColor">@color/white</item>
		<item name="android:textSize">30sp</item>
    </style>
</resources>
